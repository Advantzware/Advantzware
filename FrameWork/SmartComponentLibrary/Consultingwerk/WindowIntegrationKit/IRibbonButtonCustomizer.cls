USING Consultingwerk.WindowIntegrationKit.* FROM PROPATH .
USING Infragistics.Win.UltraWinToolbars.*   FROM ASSEMBLY .  
USING Progress.Lang.*                       FROM PROPATH .

INTERFACE Consultingwerk.WindowIntegrationKit.IRibbonButtonCustomizer:  
  
    /*------------------------------------------------------------------------------
        Purpose: Customizes a single Ribbon Button (instance tool) after it has been 
                 created 
        Notes:   
        @param poButtonTool The ButtonTool instance
    ------------------------------------------------------------------------------*/
    METHOD PUBLIC VOID CustomizeRibbonButton (poButtonTool AS ButtonTool).

    /*------------------------------------------------------------------------------
        Purpose: Refreshes a single Ribbon Button (instance tool) during the 
                 RefreshTool method of the UltraToolbarsHelper
        Notes:   
        @param poButtonTool The ButtonTool instance
    ------------------------------------------------------------------------------*/
    METHOD PUBLIC VOID RefreshRibbonButton (poButtonTool AS ButtonTool).
    
END INTERFACE.
