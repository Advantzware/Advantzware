BLOCK-LEVEL ON ERROR UNDO, THROW.

USING Consultingwerk.Web.KendoUiBuilder.*              FROM PROPATH .
USING Consultingwerk.Web.KendoUiBuilder.DataProvider.* FROM PROPATH .
USING Progress.Lang.*                                  FROM PROPATH .

CLASS Consultingwerk.Web.KendoUiBuilder.DataProvider.DataProvider
    INHERITS MetaDataObject:

    {Consultingwerk/JsonSerializableProperty11.i authenticationModel AuthenticationModelEnum} .
    {Consultingwerk/JsonSerializableProperty11.i providerType CHARACTER "INIT 'Progress Data Service':U"} .
    {Consultingwerk/JsonSerializableProperty11.i serviceUri CHARACTER "INIT 'Progress Data Service':U"} .
    {Consultingwerk/JsonSerializableProperty11.i catalogUris "CHARACTER EXTENT"} .
    {Consultingwerk/JsonSerializableProperty11.i autoGenerateDataSources LOGICAL "INIT ?"} .
    {Consultingwerk/JsonSerializableProperty11.i generateChildTables LOGICAL "INIT TRUE"} .
    {Consultingwerk/JsonSerializableProperty11.i verb CHARACTER "INIT 'GET':U"} .
    {Consultingwerk/JsonSerializableProperty11.i children Consultingwerk.Web.KendoUiBuilder.DataProvider.ListDataSource} .

    /**
     * Purpose: Constructor for the DataProvider class
     * Notes:
     * @param pcName The name of the Data Provider
     */
    CONSTRUCTOR PUBLIC DataProvider (pcName AS CHARACTER):

        THIS-OBJECT () .

        THIS-OBJECT:name = pcName .

    END CONSTRUCTOR.

    /**
     * Purpose: Constructor for the DataProvider class
     * Notes:
     */
    CONSTRUCTOR PUBLIC DataProvider ():
        SUPER ("data-provider":U).

        THIS-OBJECT:AddSerializableProperties ("{&SerializableProperties}":U) .

        THIS-OBJECT:authenticationModel = AuthenticationModelEnum:Anonymous .

        THIS-OBJECT:children = NEW ListDataSource () .

    END CONSTRUCTOR.

END CLASS.
