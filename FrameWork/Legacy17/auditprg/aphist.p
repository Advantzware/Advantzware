  IF action = "UPDATE" THEN
  DO:
    IF ttbl_aphist1.vend-no NE ttbl_aphist2.vend-no THEN
    PUT STREAM s-audit-rpt UNFORMATTED "*" AT 1.
    PUT STREAM s-audit-rpt UNFORMATTED "?: " AT 3 ttbl_aphist2.vend-no.
  END.
END.
IF v_show_index THEN
DO:
  PUT STREAM s-audit-rpt UNFORMATTED "Index Fields - Label: Value (database field-name)" AT 5.
  PUT STREAM s-audit-rpt UNFORMATTED "Company: " AT 7.
  IF action = "UPDATE" THEN
  PUT STREAM s-audit-rpt UNFORMATTED ttbl_aphist2.company " (company)".
  ELSE
  PUT STREAM s-audit-rpt UNFORMATTED ttbl_aphist1.company " (company)".
  PUT STREAM s-audit-rpt UNFORMATTED "Date: " AT 7.
  IF action = "UPDATE" THEN
  PUT STREAM s-audit-rpt UNFORMATTED ttbl_aphist2.check-date FORMAT "99/99/9999" " (check-date)".
  ELSE
  PUT STREAM s-audit-rpt UNFORMATTED ttbl_aphist1.check-date FORMAT "99/99/9999" " (check-date)".
  PUT STREAM s-audit-rpt UNFORMATTED "?: " AT 7.
  IF action = "UPDATE" THEN
  PUT STREAM s-audit-rpt UNFORMATTED ttbl_aphist2.vend-no " (vend-no)".
  ELSE
  PUT STREAM s-audit-rpt UNFORMATTED ttbl_aphist1.vend-no " (vend-no)".
END.
PUT STREAM s-audit-rpt UNFORMATTED SKIP(1).
