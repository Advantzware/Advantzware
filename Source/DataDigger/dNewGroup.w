  DEFINE INPUT PARAMETER TABLE FOR ttFavGroup.
  DEFINE OUTPUT PARAMETER pcNewName AS CHARACTER NO-UNDO.
&ELSE
  DEFINE VARIABLE pcNewName AS CHARACTER NO-UNDO.
&ENDIF

