  Purpose:     Override standard ADM method
  Notes:       
------------------------------------------------------------------------------*/

    DEFINE VARIABLE cBaseCurrencyCode AS CHARACTER NO-UNDO.
    
    /* Code placed here will execute PRIOR to standard behavior. */
    {methods/run_link.i "RECORD-SOURCE" "GetBaseCurrencyCode" "(OUTPUT cBaseCurrencyCode)"}
    
    IF cBaseCurrencyCode EQ "" THEN DO:
        MESSAGE "Base currency code is empty"
            VIEW-AS ALERT-BOX ERROR.
        
        RETURN.
