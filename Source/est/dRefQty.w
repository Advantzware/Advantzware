/* ***********************  Control Definitions  ********************** */

/* Define a dialog box                                                  */

/* Definitions of the field level widgets                               */
DEFINE BUTTON Btn_OK AUTO-GO 
     LABEL "OK" 
     SIZE 15 BY 1.14
     BGCOLOR 8 .

DEFINE VARIABLE fiRefQty AS DECIMAL FORMAT ">>>,>>>,>>9" INITIAL 0 
     LABEL "Reference Quantity" 
     VIEW-AS FILL-IN 
     SIZE 21 BY 1.

DEFINE RECTANGLE RECT-30
     EDGE-PIXELS 2 GRAPHIC-EDGE  NO-FILL   
     SIZE 68.8 BY 3.38.


/* ************************  Frame Definitions  *********************** */

DEFINE FRAME Dialog-Frame
     fiRefQty AT ROW 2.19 COL 26 COLON-ALIGNED
     Btn_OK AT ROW 5.05 COL 27
     RECT-30 AT ROW 1.19 COL 1.2 WIDGET-ID 56
     SPACE(2.79) SKIP(1.85)
    WITH VIEW-AS DIALOG-BOX KEEP-TAB-ORDER 
         SIDE-LABELS NO-UNDERLINE THREE-D  SCROLLABLE 
         TITLE "Enter Reference Quantity for Combo Estimate"
         DEFAULT-BUTTON Btn_OK WIDGET-ID 100.


/* *********************** Procedure Settings ************************ */

&ANALYZE-SUSPEND _PROCEDURE-SETTINGS
/* Settings for THIS-PROCEDURE
   Type: Dialog-Box
   Allow: Basic,Browse,DB-Fields,Query
   Other Settings: COMPILE
 */
&ANALYZE-RESUME _END-PROCEDURE-SETTINGS



/* ***********  Runtime Attributes and AppBuilder Settings  *********** */

&ANALYZE-SUSPEND _RUN-TIME-ATTRIBUTES
