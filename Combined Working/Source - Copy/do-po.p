for each po-ordl where cons-uom eq "" and item-type eq yes,
    first item WHERE
          ITEM.company EQ po-ordl.company AND
          ITEM.i-no EQ po-ordl.i-no no-lock:
    
  po-ordl.cons-uom = item.cons-uom.
    
  find first e-item
      where e-item.company eq item.company
        and e-item.i-no    eq item.i-no
      no-lock no-error.
  if avail e-item then
    if e-item.std-uom eq "MSF" or e-item.std-uom eq "EA" or
       e-item.std-uom eq "M" or e-item.std-uom eq "MSH" then
      po-ordl.cons-uom = "EA".
    else
      po-ordl.cons-uom = e-item.std-uom.
end.
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             
