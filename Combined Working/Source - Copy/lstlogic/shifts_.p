/* shifts_.p */
/* remove this comment to prevent auto creating, saving custom changes */

&Scoped-define PROGNAME shifts_.
&Scoped-define LISTORDER Shift,Shift Description
&Scoped-define SHOWNOTES yes
&Scoped-define SHOWMISCFLDS yes
&Scoped-define SHOWADDRESSES no
&Scoped-define SHOWPHONES no

DEFINE QUERY shifts-query FOR shifts.

DEFINE VARIABLE selected-company AS CHARACTER FORMAT "X(3)" LABEL "Company" NO-UNDO.
DEFINE VARIABLE begin_shift AS CHARACTER FORMAT "X(8)" LABEL "Beginning Shift" NO-UNDO.
DEFINE VARIABLE begin_shifts_description AS CHARACTER FORMAT "X(30)" LABEL "Beginning Description" NO-UNDO.
DEFINE VARIABLE end_shift AS CHARACTER FORMAT "X(8)" LABEL "Ending Shift" NO-UNDO.
DEFINE VARIABLE end_shifts_description AS CHARACTER FORMAT "X(30)" LABEL "Ending Description" NO-UNDO.

{methods/lstlogic/lstlogic.i}

PROCEDURE List-Logic:
  CASE list-order:
    WHEN 1 THEN
    OPEN QUERY shifts-query FOR EACH shifts NO-LOCK WHERE
        &IF "{&WHERE-STATEMENT}" NE "" &THEN
        {&WHERE-STATEMENT} AND
        &ENDIF
        shifts.shift GE begin_shift AND
        shifts.shift LE end_shift.
    WHEN 2 THEN
    OPEN QUERY shifts-query FOR EACH shifts NO-LOCK WHERE
        &IF "{&WHERE-STATEMENT}" NE "" &THEN
        {&WHERE-STATEMENT} AND
        &ENDIF
        shifts.description GE begin_shifts_description AND
        shifts.description LE end_shifts_description.
  END CASE.
  GET FIRST shifts-query.
  DO WHILE AVAILABLE(shifts)
      WITH FRAME {&FRAME-NAME} NO-BOX WIDTH 132 STREAM-IO DOWN:
    {methods/lstlogic/custom/shifts_.i}
    DOWN.
    GET NEXT shifts-query.
  END.
END PROCEDURE. /* List-Logic */

PROCEDURE Import-Values:
  IMPORT selected-company.
  IMPORT begin_shift.
  IMPORT begin_shifts_description.
  IMPORT end_shift.
  IMPORT end_shifts_description.
END PROCEDURE.

