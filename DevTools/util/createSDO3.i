            IF ttFile.ttNumExtents < 2 THEN DO:
                IF NOT LAST(ttFile.ttFieldName) THEN
                    PUT UNFORMATTED '  FIELD ' + ttFile.ttFieldName + ' LIKE ' + ttFile.ttFileName + '.' + ttFile.ttFieldName + ' VALIDATE ~~' + CHR(10).
                ELSE
                    PUT UNFORMATTED '  FIELD ' + ttFile.ttFieldName + ' LIKE ' + ttFile.ttFileName + '.' + ttFile.ttFieldName + ' VALIDATE' + CHR(10).
            END.
            ELSE DO:
                DO iCtr = 1 TO ttFile.ttNumExtents:
                    IF LAST(ttFile.ttFieldName)
                    AND iCtr = ttFile.ttNumExtents THEN
                        PUT UNFORMATTED '  FIELD ' + ttFile.ttFieldName + STRING(iCtr) + ' LIKE ' + ttFile.ttFileName  + '.' + ttFile.ttFieldName + '[' + STRING(iCtr) + '] VALIDATE' + CHR(10).
                    ELSE
                        PUT UNFORMATTED '  FIELD ' + ttFile.ttFieldName + STRING(iCtr) + ' LIKE ' + ttFile.ttFileName  + '.' + ttFile.ttFieldName + '[' + STRING(iCtr) + '] VALIDATE ~~' + CHR(10).
                END.
            END.
        END.
