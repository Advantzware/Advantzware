        PUT UNFORMATTED '  Version:              ' + 
                                    (IF tbAddVersion:CHECKED THEN fiVersion:SCREEN-VALUE + ' - ' ELSE '') +
                                    (IF tbAddDate:CHECKED THEN fiRevDate:SCREEN-VALUE + ' - ' ELSE '') +
                                    (IF tbAuthor:CHECKED THEN fiAuthor:SCREEN-VALUE ELSE '') + CHR(10).
