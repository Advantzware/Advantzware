/*                                                                            */
/* carrier list printout                                                     */
/*                                                                            */
/* -------------------------------------------------------------------------- */

{sys/form/r-top.f}

def var fco as ch NO-UNDO.
def var tco like fco NO-UNDO.
def var floc as ch NO-UNDO.
def var tloc like floc NO-UNDO.
def var fcarr as ch initial "000000" NO-UNDO.
def var tcarr like fcarr initial "ZZZZZZ" NO-UNDO.
def var detailed as logical format "Yes/No" initial NO NO-UNDO.
def var i as INT NO-UNDO.
DEF VAR excelheader AS CHAR NO-UNDO.
DEF VAR viLoop AS INT NO-UNDO.
DEF VAR var-first-of AS LOG NO-UNDO.
DEF VAR var-print-four-spaces AS LOG NO-UNDO.
DEF VAR carr-mtrx-printed AS LOG NO-UNDO.

assign
 str-tit2 = c-win:title
 {sys/inc/ctrtext.i str-tit2 56}
   
 fco      = cocode
 tco      = cocode
 floc     = locode
 tloc     = locode
 fcarr    = begin_carr-no
 tcarr    = end_carr-no
 detailed = tb_detailed.
 
{sys/inc/print1.i}

{sys/inc/outprint.i  value(lines-per-page) }

IF tb_excel THEN DO:
  OUTPUT STREAM excel TO VALUE(fi_file).
  excelheader = "Company,Location,Carrier,Desc.".
  IF detailed THEN
     excelheader = excelheader
                 + ",Delivery Zone,Description,Zip Code,Minimum Rate,"
                 + "Weight (lbs.) UP TO,Rate / 100lbs.".
  PUT STREAM excel UNFORMATTED '"' REPLACE(excelheader,',','","') '"' SKIP.
END.

if td-show-parm then run show-param.

display str-tit with frame r-top.

SESSION:SET-WAIT-STATE ("general").

for each carrier
    where carrier.company ge fco
      and carrier.company le tco
      and carrier.loc     ge floc
      and carrier.loc     le tloc
      and carrier.carrier ge fcarr
      and carrier.carrier le tcarr
      NO-LOCK
    break by carrier.company
          by carrier.loc
          by carrier.carrier
    
    with frame carrier stream-io:

  display carrier.company
          carrier.loc
          carrier.carrier
          carrier.dscr.

  IF NOT detailed THEN
          {custom/statusMsg.i " 'Processing Carrier#  '  + carrier.carrier  "}
          
  IF tb_excel THEN
  DO:
     PUT STREAM excel UNFORMATTED
       '"' carrier.company     '",'
       '"' carrier.loc         '",'
       '"' carrier.carrier     '",'
       '"' carrier.dscr        '",'.

     IF NOT detailed THEN
        PUT STREAM excel UNFORMATTED SKIP.
     ELSE
        ASSIGN
           var-print-four-spaces = NO
           carr-mtrx-printed = NO.
  END.

  if detailed then
  for each carr-mtx
      where carr-mtx.company  eq cocode
        and carr-mtx.loc      eq locode
        and carr-mtx.carrier  eq carrier.carrier
      no-lock with frame carrier:

      {custom/statusMsg.i " 'Processing Carrier/Zon#  '  + carrier.carrier + '/' + carr-mtx.del-zip "}
      
    put skip(1)
        "Delivery Zone:" to 20
        carr-mtx.del-zone
        space(3)
        carr-mtx.del-dscr
        " Zip Code:"
        carr-mtx.del-zip
        skip
        " Minimum Rate:" to 20
        carr-mtx.min-rate
        skip.
        
    IF tb_excel THEN
    DO:
       IF var-print-four-spaces THEN
       DO viLoop = 1 TO 4:
          PUT STREAM excel UNFORMATTED
              '"' "" '",'.
       END.

       PUT STREAM excel UNFORMATTED
           '"' carr-mtx.del-zone    '",'
           '"' carr-mtx.del-dscr    '",'
           '"' carr-mtx.del-zip     '",'
           '"' carr-mtx.min-rate    '",'.

       ASSIGN 
          var-first-of = YES
          var-print-four-spaces = YES
          carr-mtrx-printed = YES.
    END.

    do i = 1 to 10:
      if i eq 1 then
        put "          Weight (lbs.) UP TO           Rate / 100lbs."
            skip.
            
      if carr-mtx.weight[i] ne 0 or carr-mtx.rate[i] ne 0 then
      DO:
         put space(22)
             carr-mtx.weight[i]
             space(10)
             carr-mtx.rate[i]
             skip.

         IF tb_excel THEN
         DO:
            IF NOT var-first-of THEN
            DO:
               DO viLoop = 1 TO 8:
                  PUT STREAM excel UNFORMATTED
                      '"' "" '",'.
               END.
            END.
           
            var-first-of = NO.

            PUT STREAM excel UNFORMATTED
                '"' STRING(carr-mtx.weight[i],">>>>>>9") '",'
                '"' STRING(carr-mtx.rate[i],">>9.999")   '",'
                SKIP.
         END.
      END.

      IF tb_excel THEN
         PUT STREAM excel UNFORMATTED SKIP.
    end.
  end.

  down 2.

  IF tb_excel AND detailed AND
     NOT carr-mtrx-printed THEN
     PUT STREAM excel UNFORMATTED SKIP.
end.

IF tb_excel THEN DO:
  OUTPUT STREAM excel CLOSE.
  IF tb_runExcel THEN
    OS-COMMAND NO-WAIT START excel.exe VALUE(SEARCH(fi_file)).
END.

