&ANALYZE-SUSPEND _UIB-CODE-BLOCK _PROCEDURE local-open-query B-table-Win 
PROCEDURE local-open-query :
/*------------------------------------------------------------------------------
  Purpose:     Override standard ADM method
  Notes:       
------------------------------------------------------------------------------*/

  /* Code placed here will execute PRIOR to standard behavior. */

  FOR EACH mat:
    DELETE mat.
  END.

  FOR EACH job-mat OF job NO-LOCK:

    FIND item WHERE item.company = cocode AND
		   item.i-no = job-mat.i-no
		   NO-LOCK NO-ERROR.
     FIND FIRST po-all WHERE po-all.company = cocode AND
	        	po-all.job     = job-mat.job AND
			    po-all.form-no = job-mat.frm AND
			    po-all.i-no    = job-mat.rm-i-no
			    use-index job-idx
			    no-lock no-error.
     IF AVAILABLE po-all THEN
     FIND po-ordl WHERE po-ordl.company = cocode AND
			 po-ordl.po-no   = po-all.po-no AND
			 po-ordl.line    = po-all.line
			 NO-LOCK NO-ERROR.
    
    CREATE mat.
    ASSIGN
     mat.form-no  = job-mat.frm
     mat.blank-no = job-mat.blank-no
     mat.rm-i-no  = job-mat.rm-i-no.

    IF AVAIL ITEM THEN
      ASSIGN
       mat.i-name  = item.i-name
       mat.q-onh   = item.q-onh
       mat.q-comm  = item.q-comm
       mat.q-avail = (item.q-onh - item.q-comm).

    IF AVAIL po-all THEN mat.qty-all = po-all.qty-all.

    IF AVAIL po-ordl THEN mat.due-date = po-ordl.due-date.
  END.

  /* Dispatch standard ADM method.                             */
  RUN dispatch IN THIS-PROCEDURE ( INPUT 'open-query':U ) .

  /* Code placed here will execute AFTER standard behavior.    */

END PROCEDURE.

