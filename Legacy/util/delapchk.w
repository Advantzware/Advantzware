&ANALYZE-SUSPEND _UIB-CODE-BLOCK _PROCEDURE run-process C-Win 
PROCEDURE run-process :
SESSION:SET-WAIT-STATE("General").

   OUTPUT STREAM st-save TO value("c:\tmp\apchk.d" + STRING(TIME)).

   FOR EACH ap-chk WHERE
       ap-chk.company  EQ cocode AND
       ap-chk.bank-code EQ begin_bank AND
       ap-chk.check-no GE begin_chk AND
       ap-chk.check-no LE end_chk:

       EXPORT STREAM st-save ap-chk.
       DISP ap-chk.check-no ap-chk.check-date
            ap-chk.vend-no ap-chk.check-amt.
       PAUSE 0.     
       DELETE ap-chk.
   END.

   IF tg_ap-pay THEN
      FOR EACH ap-pay WHERE
          ap-pay.company EQ cocode AND
          ap-pay.bank-code EQ begin_bank AND
          ap-pay.check-no GE begin_chk AND
          ap-pay.check-no LE end_chk:

          DELETE ap-pay.
      END.

   OUTPUT CLOSE.

SESSION:SET-WAIT-STATE("").

MESSAGE TRIM(c-win:TITLE) + " Process Is Completed." VIEW-AS ALERT-BOX.

