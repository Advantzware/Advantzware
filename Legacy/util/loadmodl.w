&Scoped-define SELF-NAME Btn_OK
&ANALYZE-SUSPEND _UIB-CODE-BLOCK _CONTROL Btn_OK wWin
ON CHOOSE OF Btn_OK IN FRAME fMain /* Import */
DO:
  SESSION:SET-WAIT-STATE("general").  
  /*OUTPUT TO VALUE ("c:\tmp\module.d" + STRING(TIME)) .

  FOR EACH asi.module:
      EXPORT asi.module.
      DELETE asi.module.
  END.
  OUTPUT CLOSE.*/

  EMPTY TEMP-TABLE tt-module.

  INPUT STREAM st-input FROM value(ls-proc) NO-ECHO.
  REPEAT:
     CREATE tt-module.
     IMPORT STREAM st-input tt-module.

     IF NOT CAN-FIND(FIRST module WHERE
        module.module = tt-module.module AND
        module.db-name = tt-module.db-name) THEN
        DO:
           CREATE module.
           BUFFER-COPY tt-module TO module.
           RELEASE module.
        END.
  END.

  INPUT STREAM st-input CLOSE.
  
  MESSAGE "Procedure is completed." VIEW-AS ALERT-BOX .
  SESSION:SET-WAIT-STATE("").
END.

