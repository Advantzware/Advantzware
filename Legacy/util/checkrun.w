PROCEDURE run-report :
{sys/form/r-top.f}

DEF VAR v-s-run     LIKE glhist.tr-num                          NO-UNDO.
DEF VAR v-e-run     LIKE v-s-run                                NO-UNDO.
DEF VAR v-s-dat     LIKE glhist.tr-date                         NO-UNDO.
DEF VAR v-e-dat     LIKE v-s-dat                                NO-UNDO.

DEF VAR v-tot       AS   DEC FORMAT "->>,>>>,>>9.99" EXTENT 3   NO-UNDO.

FORM HEADER SKIP(1) WITH FRAME r-top.


SESSION:SET-WAIT-STATE ("general").

ASSIGN
 str-tit2 = TRIM(c-win:TITLE) + " for Out-of-Balance Runs"
 {sys/inc/ctrtext.i str-tit2 56}
 
 v-s-run = begin_run-no
 v-e-run = end_run-no
 v-s-dat = begin_date
 v-e-dat = end_date.

{sys/inc/print1.i}

{sys/inc/outprint.i VALUE(lines-per-page)}

IF td-show-parm THEN RUN show-param.

VIEW FRAME r-top.

RUN oe/getacct.p.

IF TRIM(v-ar-acct) NE "" THEN
FOR EACH ar-ledger
    WHERE ar-ledger.company EQ cocode
      AND ar-ledger.tr-num  GE v-s-run
      AND ar-ledger.tr-num  LE v-e-run
      AND ar-ledger.tr-date GE v-s-dat
      AND ar-ledger.tr-date LE v-e-dat
      AND ar-ledger.ref-num BEGINS "INV# "
    NO-LOCK
    BREAK BY ar-ledger.tr-num:

  v-tot[1] = v-tot[1] - ar-ledger.amt.

  IF LAST-OF(ar-ledger.tr-num) THEN DO:
    FOR EACH glhist
        WHERE glhist.company EQ ar-ledger.company
          AND glhist.actnum  EQ v-ar-acct
          AND glhist.tr-date EQ ar-ledger.tr-date
          AND glhist.tr-num  EQ ar-ledger.tr-num
        NO-LOCK:
            
      v-tot[2] = v-tot[2] + glhist.tr-amt.
    END.

    FOR EACH gltrans
        WHERE gltrans.company EQ ar-ledger.company
          AND gltrans.actnum  EQ v-ar-acct
          AND gltrans.tr-date EQ ar-ledger.tr-date
          AND gltrans.trnum   EQ ar-ledger.tr-num
        NO-LOCK:
            
      v-tot[2] = v-tot[2] + gltrans.tr-amt.
    END.

    v-tot[3] = v-tot[1] - v-tot[2].

    IF v-tot[3] GT 0 THEN
      DISPLAY ar-ledger.tr-date   LABEL "Trans Date"
              SPACE(3)
              ar-ledger.tr-num    LABEL "Run #"       FORMAT "999999"
              SPACE(3)
              v-tot[3]            LABEL "Amt Missing from GL"
             
          WITH FRAME detail STREAM-IO WIDTH 132 DOWN NO-BOX NO-ATTR-SPACE.
    
    v-tot = 0.
  END.
END.

SESSION:SET-WAIT-STATE ("").

/* end ---------------------------------- copr. 2001 Advanced Software, Inc. */

end procedure.

