&Scoped-define SELF-NAME btnOk
&ANALYZE-SUSPEND _UIB-CODE-BLOCK _CONTROL btnOk C-Win
ON CHOOSE OF btnOk IN FRAME DEFAULT-FRAME /* OK */
DO:
   DEF VAR cFileStream AS CHAR NO-UNDO.

   IF v-graphic-char NE "" THEN
   DO:
      IF SESSION:SET-WAIT-STATE("GENERAL") THEN.

      IF LOOKUP(SUBSTR(v-graphic-char,LENGTH(v-graphic-char)),"\,/") EQ 0 THEN
         v-graphic-char = v-graphic-char + "\".

      INPUT FROM OS-DIR (v-graphic-char) ECHO.

      REPEAT:
         IMPORT cFileStream.

         IF LENGTH(cFileStream) GE 4 AND
            SUBSTR(cFileStream,LENGTH(cFileStream) - 3) EQ ".jpg" THEN
         DO:
            FIND FIRST itemfg WHERE
                 itemfg.company EQ cocode AND
                 itemfg.i-no = SUBSTR(cFileStream,1,LENGTH(cFileStream) - 4)
                 EXCLUSIVE-LOCK NO-ERROR.

            IF AVAIL itemfg THEN
            DO:
               itemfg.box-image = v-graphic-char + itemfg.i-no + ".jpg".
               RELEASE itemfg.
            END.
         END.
      END.

      MESSAGE "FG Item Image File(s) Saved."
          VIEW-AS ALERT-BOX INFO BUTTONS OK.
   END.
    {Advantzware/WinKit/winkit-panel-triggerend.i}
END.

