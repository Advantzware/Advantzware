&ANALYZE-SUSPEND _UIB-CODE-BLOCK _PROCEDURE run-report C-Win 
PROCEDURE run-report :
DEF VAR lv-input AS cha FORM "x(300)" NO-UNDO.

    SESSION:SET-WAIT-STATE("general").
    in-file-name = SEARCH(in-file-name).
    qtr-file-name = in-file-name.

    /* delete current account */
    DISABLE TRIGGERS FOR LOAD OF account.
    OUTPUT TO c:\tmp\account.dat.
    FOR EACH account WHERE account.company = cocode.
        EXPORT account.
        DELETE account.
    END.
    OUTPUT CLOSE.

    INPUT FROM VALUE(qtr-file-name) no-echo.    
    repeat:
      IMPORT UNFORMATTED lv-input.
      IF NUM-ENTRIES(lv-input) < 3 THEN NEXT.

      CREATE tt-act.
      ASSIGN tt-act.actnum = ENTRY(1,lv-input)
             tt-act.dscr = ENTRY(2,lv-input)
             tt-act.TYPE = ENTRY(3,lv-input).
    END.
    INPUT CLOSE.

    FOR EACH tt-act:
        FIND FIRST account WHERE account.company eq cocode 
                             AND account.actnum = tt-act.actnum EXCLUSIVE-LOCK NO-ERROR.
        IF NOT AVAIL account THEN CREATE account.
        ASSIGN account.company = cocode
               account.actnum = tt-act.actnum
               account.dscr = tt-act.dscr
               account.TYPE = IF lookup(tt-act.TYPE,"A,C,E,L,R,T") > 0 THEN tt-act.TYPE ELSE "A".

        v-status:SCREEN-VALUE IN FRAME {&FRAME-NAME} = "Importing for account: " + tt-act.actnum.
    END. 

SESSION:SET-WAIT-STATE("").

END PROCEDURE.

