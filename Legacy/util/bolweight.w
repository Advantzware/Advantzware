&ANALYZE-SUSPEND _UIB-CODE-BLOCK _PROCEDURE run-process C-Win 
PROCEDURE run-process :
DEF VAR lv-weight LIKE oe-boll.weight EXTENT 2 NO-UNDO.
DEF VAR lv-freight LIKE oe-boll.freight NO-UNDO.


SESSION:SET-WAIT-STATE("General").

FOR EACH oe-bolh
    WHERE oe-bolh.company EQ cocode
      AND oe-bolh.bol-no  GE begin_bol-no
      AND oe-bolh.bol-no  LE end_bol-no
    TRANSACTION:

  STATUS DEFAULT "Processing BOL#: " + TRIM(STRING(oe-bolh.bol-no,">>>>>>>>")).

  RELEASE carrier.
  FIND FIRST shipto NO-LOCK
      WHERE shipto.company EQ oe-bolh.company
        AND shipto.cust-no EQ oe-bolh.cust-no
        AND shipto.ship-id EQ oe-bolh.ship-id
      NO-ERROR.
      
  IF AVAIL shipto THEN
  FIND FIRST carrier NO-LOCK
      WHERE carrier.company EQ shipto.company
        AND carrier.loc     EQ shipto.loc
        AND carrier.carrier EQ oe-bolh.carrier
      NO-ERROR.

  ASSIGN
   lv-weight  = 0
   lv-freight = 0.
    
  FOR EACH oe-boll
      WHERE oe-boll.company EQ oe-bolh.company
        AND oe-boll.b-no    EQ oe-bolh.b-no:

    FIND FIRST itemfg NO-LOCK
        WHERE itemfg.company EQ oe-boll.company
          AND itemfg.i-no    EQ oe-boll.i-no
        NO-ERROR.

    ASSIGN
     lv-weight[1]   = oe-boll.weight
     oe-boll.weight = (oe-boll.qty / 100) *
                      (IF AVAIL itemfg THEN itemfg.weight-100 ELSE 0)
     lv-weight[2]   = lv-weight[2] + oe-boll.weight.

    IF AVAIL carrier AND carrier.chg-method EQ "W" AND
       oe-boll.weight NE lv-weight[1]              THEN
      oe-boll.freight = oe-boll.freight * (oe-boll.weight / lv-weight[1]).

    lv-freight = lv-freight + oe-boll.freight.    
  END.

  ASSIGN
   oe-bolh.tot-wt  = lv-weight[2]
   oe-bolh.freight = lv-freight.
END. /* each oe-bolh */

STATUS DEFAULT "".
    
SESSION:SET-WAIT-STATE("").

MESSAGE TRIM(c-win:TITLE) + " Process Is Completed." VIEW-AS ALERT-BOX.

APPLY "close" TO THIS-PROCEDURE.

RETURN NO-APPLY.
  
