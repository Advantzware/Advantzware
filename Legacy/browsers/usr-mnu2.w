PROCEDURE find-menu :
/*------------------------------------------------------------------------------
  Purpose:     
  Parameters:  <none>
  Notes:       
------------------------------------------------------------------------------*/

  find first mnu-item where mnu-item.menu-num = int(lv-search) 
     use-index pi-mnu-item no-lock no-error.
  if avail mnu-item then do:
     reposition  {&browse-name} to rowid rowid(mnu-item).
     
  end.   
