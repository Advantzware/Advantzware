ADD TABLE "prgrms"
  AREA "Data"
  LABEL "Programs Master File"
  DESCRIPTION "Programs Master File
"
  VALEXP "{methods/validate.del/prgrms.i}"
  VALMSG "Program exists within other related Tables and can not be deleted."
  DUMP-NAME "prgrms"
  TABLE-TRIGGER "CREATE" OVERRIDE PROCEDURE "create.trg/prgrms.p" CRC "?" 
  TABLE-TRIGGER "DELETE" OVERRIDE PROCEDURE "delete.trg/prgrms.p" CRC "?" 
  TABLE-TRIGGER "WRITE" OVERRIDE PROCEDURE "write.trg/prgrms.p" CRC "?" 

ADD FIELD "prgmname" OF "prgrms" AS character 
  FORMAT "X(10)"
  INITIAL ""
  LABEL "Program"
  POSITION 2
  MAX-WIDTH 20
  HELP "Enter Program Name"
  ORDER 10
  MANDATORY

ADD FIELD "prgtitle" OF "prgrms" AS character 
  FORMAT "X(30)"
  INITIAL ""
  LABEL "Title"
  POSITION 3
  MAX-WIDTH 60
  HELP "Enter Program Title"
  ORDER 20

ADD FIELD "can_run" OF "prgrms" AS character 
  FORMAT "X(60)"
  INITIAL "*"
  LABEL "Run ID's"
  POSITION 4
  MAX-WIDTH 120
  VIEW-AS "VIEW-AS EDITOR INNER-CHARS 60 INNER-LINES 3 SCROLLBAR-VERTICAL"
  HELP "Enter User ID's which Can Run this Procedure"
  LENGTH 0
  ORDER 40

ADD FIELD "can_create" OF "prgrms" AS character 
  FORMAT "X(60)"
  INITIAL "*"
  LABEL "Create ID's"
  POSITION 5
  MAX-WIDTH 120
