ADD INDEX "pi-prgrms" ON "prgrms" 
  AREA "Index"
  UNIQUE
  PRIMARY
  DESCRIPTION "Program Master Primary Index"
  INDEX-FIELD "prgmname" ASCENDING 

ADD INDEX "si-menuOrder" ON "prgrms" 
  AREA "Index"
  DESCRIPTION "Secondary Index by Menu Order"
  INDEX-FIELD "menuOrder" ASCENDING 

ADD INDEX "si-prgtitle" ON "prgrms" 
  AREA "Index"
  DESCRIPTION "Program Master Secondary Index by Program Title"
